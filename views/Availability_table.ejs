<body>
  <div class="container">
    <div class="form-header">
      <h1><b><u>SEAT AVAILABILITY TABLE</u></b></h1>
    </div>
<%trains.forEach(function(train){%>

      <%var i=1%>

    <div style="margin-top:2%;">
      <table border="2" width="1000px" cellpadding="5" align="center" cellspacing="0" style="text-align:center;border-radius:5px;">
        <tr style="background-color:black;color:white;">
          <th>Train Number</th>
          <th>Train Name</th>

          <th>Source Station</th>
          <th>Destination Station</th>
          <th>Quota</th>
        </tr>
        <tr>
          <td><%=train.train_no%></td>
          <td><%=train.train_name%></td>

          <td><%=train.from%></td>
          <td><%=train.to%></td>
          <td>GENERAL</td>
        </tr>
      </table><br>
    </div>
    <div>
      <table border="3" cellpadding="5" align="center" width="1000px" cellspacing="0" style="text-align:center;border-radius:5px;">
        <tr class="heading" style="color:white;background-color:black;">

          <th>S.N.</th>
          <th>Class</th>
          <th>Date</th>
          <th>Status</th>

          <th>Proceed to Booking</th>

        </tr>
        <%seats.forEach(function(seat){%>
    <%if(train.train_no===seat.train_no){%>
        <tr>
          <td><%=i++%></td>
          <td><%=seat.class%></td>
          <td><%=seat.date%></td>
          <td><%=seat.seats%></td>
          <td><a href="/payment_gateway"<button type="submit" name="Book Ticket" >Book Ticket</button></a></td>
        </tr>
        <%}%>
            <%});%>
      </table><br>
    </div>
<%});%>
